<?xml version="1.0" encoding="utf-8"?>
<com.zhy.zlib.view.TopBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:CT="循环轮播图"
    app:L1src="@color/colorWhite"
    app:L2src="@drawable/shape_dot_d8d8d8"
    app:R1src="@color/colorWhite"
    app:R2src="@drawable/shape_dot_d8d8d8">

    <include
        android:id="@+id/vp"
        layout="@layout/layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp" />

    <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:layout_below="@id/vp" />

</com.zhy.zlib.view.TopBar>


